using CapaEntidades;
using System;
using System.Collections.Generic;
using System.Data;
using System.Data.SqlClient;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CapaDatos
{
    public class DetalleVentaDAL
    {
        // INSERTAR
        public int Insertar(DetalleVenta detalle)
        {
            using (SqlConnection conn = Conexion.ObtenerConexion())
            {
                SqlCommand cmd = new SqlCommand("sp_DetalleVenta_Insertar", conn);
                cmd.CommandType = CommandType.StoredProcedure;

                cmd.Parameters.AddWithValue("@id_venta", detalle.id_venta);
                cmd.Parameters.AddWithValue("@id_producto", detalle.id_producto);
                cmd.Parameters.AddWithValue("@cantidad", detalle.cantidad);
                cmd.Parameters.AddWithValue("@precio", detalle.precio);
                cmd.Parameters.AddWithValue("@estado", detalle.estado);

                conn.Open();
                return Convert.ToInt32(cmd.ExecuteScalar());
            }
        }

        // LISTAR
        public List<DetalleVenta> Listar()
        {
            List<DetalleVenta> lista = new List<DetalleVenta>();

            using (SqlConnection conn = Conexion.ObtenerConexion())
            {
                SqlCommand cmd = new SqlCommand("sp_DetalleVenta_Listar", conn);
                cmd.CommandType = CommandType.StoredProcedure;

                conn.Open();
                SqlDataReader reader = cmd.ExecuteReader();

                while (reader.Read())
                {
                    DetalleVenta d = new DetalleVenta()
                    {
                        id_detalle = Convert.ToInt32(reader["id_detalle"]),
                        id_venta = Convert.ToInt32(reader["id_venta"]),
                        fecha_venta = Convert.ToDateTime(reader["fecha_venta"]),
                        id_producto = Convert.ToInt32(reader["id_producto"]),
                        nombre_producto = reader["nombre_producto"].ToString(),
                        cantidad = Convert.ToInt32(reader["cantidad"]),
                        precio = Convert.ToDecimal(reader["precio"]),
                        estado = Convert.ToBoolean(reader["estado"])
                    };

                    lista.Add(d);
                }
            }

            return lista;
        }

        // ACTUALIZAR
        public void Actualizar(DetalleVenta detalle)
        {
            using (SqlConnection conn = Conexion.ObtenerConexion())
            {
                SqlCommand cmd = new SqlCommand("sp_detalle_venta_actualizar", conn);
                cmd.CommandType = CommandType.StoredProcedure;

                cmd.Parameters.AddWithValue("@id_detalle", detalle.id_detalle);
                cmd.Parameters.AddWithValue("@cantidad", (object)detalle.cantidad ?? DBNull.Value);
                cmd.Parameters.AddWithValue("@precio", (object)detalle.precio ?? DBNull.Value);
                cmd.Parameters.AddWithValue("@estado", (object)detalle.estado ?? DBNull.Value);

                conn.Open();
                cmd.ExecuteNonQuery();
            }
        }

        // ELIMINAR (lógico)
        public void Eliminar(int id_detalle)
        {
            using (SqlConnection conn = Conexion.ObtenerConexion())
            {
                SqlCommand cmd = new SqlCommand("sp_DetalleVenta_Eliminar", conn);
                cmd.CommandType = CommandType.StoredProcedure;

                cmd.Parameters.AddWithValue("@id_detalle", id_detalle);

                conn.Open();
                cmd.ExecuteNonQuery();
            }
        }

        // OBTENER DETALLE VENTA CON JOINS (para reportes)
        public DataTable ObtenerDetalleVentaConJoins()
        {
            DataTable dt = new DataTable();

            using (SqlConnection conn = new SqlConnection(conexionString))
            {
                SqlCommand cmd = new SqlCommand("sp_ObtenerDetalleVentaConJoins", conn);
                cmd.CommandType = CommandType.StoredProcedure;

                using (SqlDataAdapter adapter = new SqlDataAdapter(cmd))
                {
                    adapter.Fill(dt);
                }
            }

            return dt;
        }
    }
}