using CapaDatos;
using CapaEntidades;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CapaNegocio
{
    public class ProductoBLL
    {
        private ProductoDAL productoDAL = new ProductoDAL();

        // INSERTAR
        public void Insertar(Producto producto)
        {
            if (string.IsNullOrWhiteSpace(producto.nombre_producto))
                throw new Exception("El nombre del producto es obligatorio.");

            if (producto.precio_producto <= 0)
                throw new Exception("El precio debe ser mayor que 0.");

            if (producto.stock < 0)
                throw new Exception("El stock no puede ser negativo.");

            productoDAL.Insertar(producto);
        }

        // Compatibilidad con código existente en la UI que usa la clase "Productos"
        public void Agregar(Productos producto)
        {
            // Productos hereda de Producto, así que podemos reutilizar Insertar
            Insertar(producto);
        }

        // Obtener por Id (devuelve la clase alias "Productos" usada en formularios)
        public Productos ObtenerPorId(int id)
        {
            var lista = productoDAL.Listar();
            var p = lista.FirstOrDefault(x => x.id_productos == id);
            if (p == null) return null;

            // Si el objeto ya es Productos (subclase), retornarlo; si no, mapear
            if (p is Productos prodAlias) return prodAlias;

            return new Productos
            {
                id_productos = p.id_productos,
                nombre_producto = p.nombre_producto,
                precio_producto = p.precio_producto,
                stock = p.stock,
                id_categoria = p.id_categoria,
                estado = p.estado
            };
        }

        // LISTAR
        public List<Producto> Listar()
        {
            return productoDAL.Listar();
        }

        // ACTUALIZAR
        public void Actualizar(Producto producto)
        {
            if (producto.id_productos <= 0)
                throw new Exception("ID inválido.");

            if (string.IsNullOrWhiteSpace(producto.nombre_producto))
                throw new Exception("El nombre es obligatorio.");

            if (producto.precio_producto <= 0)
                throw new Exception("Precio inválido.");

            productoDAL.Actualizar(producto);
        }

        // ELIMINAR
        public void Eliminar(int id)
        {
            if (id <= 0)
                throw new Exception("ID inválido.");

            productoDAL.Eliminar(id);
        }

        // Compatibilidad: aceptar un objeto Productos para eliminar
        public void Eliminar(Productos producto)
        {
            if (producto == null) throw new ArgumentNullException(nameof(producto));
            Eliminar(producto.Id_Productos);
        }
    }
}